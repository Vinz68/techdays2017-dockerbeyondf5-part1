@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <base href="/index.html">
    <meta name="viewport" content="width=device-width, initial-scale = 1.0">
    <meta name="keywords" content="docker-compose, docker, stack">
    <meta name="author" content="Tutum dev team">
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
</head>
<body>
    <div id="content-container">
        <div id="content-container-center">
            <h3>Voting Demo - Blue vs. Red</h3>
            @{ 


                using (Html.BeginForm("Choice", "Home", FormMethod.Post,new { name = "choice", id = "choice" }))
                {

                <button id="a" type="submit" name="vote" class="a choice" value="Blue">Blue</button>
                <button id="b" type="submit" name="vote" class="b choice" value="Red">Red</button>

                }
                }
            <div id="tip">
                @{ 
                    if (ViewData["Vote"] != null && !string.IsNullOrEmpty(ViewData["Vote"].ToString()))
                    {
                        @: You voted @ViewData["Vote"].ToString() 
                        }
                        else
                        {
                            Html.Label("Tip: you can change your vote");


                        }
                    }


            </div>
            <div id="hostname">
                Processed by container ID @System.Environment.MachineName
            </div>
        </div>
    </div>
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.js"></script>
    
    @{ 
        if (ViewData["vote"] != null)
        {

    <script>
      var vote = "@ViewData["vote"].ToString().ToLower()";

      if(vote == "a"){
        //$(".a").prop('disabled', true);
        $(".a").html('Netherlands <i class="fa fa-check-circle"></i>');
        $(".b").css('opacity','0.5');
      }
      if(vote == "b"){
        //$(".b").prop('disabled', true);
        $(".b").html('Belgium <i class="fa fa-check-circle"></i>');
        $(".a").css('opacity','0.5');
      }
    </script>
            }
        }
</body>
</html>
